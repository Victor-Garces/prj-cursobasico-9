<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.example.christopher.magicball.BallActivity">

    <ImageView
        android:id="@+id/black_ball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ball_background"
        android:contentDescription="@string/contentDescriptionBall"/>

    <ImageView
        android:id="@+id/shake_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/shake_it_label"
        android:contentDescription="@string/contentDescriptionLabel"/>
    <TextView
        android:id="@+id/magic_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/black_ball"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:gravity="center"
        android:textColor="@color/login_text"
        android:textSize="30sp"/>

</RelativeLayout>
